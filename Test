    <script>
        function toggleMusic() {
            var music = document.getElementById('background-music');
            var btn = document.querySelector('.music-button');

            if (music.paused) {
                music.play();
                btn.innerHTML = "ğŸµ æ’­æ”¾ä¸­ ğŸ’–";
            } else {
                music.pause();
                btn.innerHTML = "â–¶ï¸ ç‚¹å‡»æ’­æ”¾ ğŸ’–";
            }
        }

        window.onload = function() {
            var music = document.getElementById('background-music');
            var btn = document.querySelector('.music-button');

            music.play()
              .then(()=> btn.innerHTML="ğŸµ æ’­æ”¾ä¸­ ğŸ’–")
              .catch(()=> btn.innerHTML="â–¶ï¸ ç‚¹å‡»æ’­æ”¾ ğŸ’–");
        };
    </script>

